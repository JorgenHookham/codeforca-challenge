{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "build"
    },
    "include": [
        "source/**/*",
        "node_modules/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}